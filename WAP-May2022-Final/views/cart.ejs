<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Node Store</title>
    <link rel="stylesheet"  href="./css/style.css">
  </head>
  <body>

    <div id="container">

        
        <%- include ('header.ejs') %>
        <%- include ('navigation.ejs') %>

        <div id="body">
          <div>
              <h2>
                  Total: $ <%=sum %>
              </h2>
          </div>
          <div>
            <%items.forEach((item) => {%>
              <div id ="lis">
                <div id ="cit">
                  <img id="icon" src=<%=item.pic%>>
                  <h2><%=item.name%></h2>
                  <p>$<%=item.price%></p>
                </div>
              </div>
            <%});%>
          </div>
        </div>

        <%- include ('footer.ejs') %>
        <%- include ('copyright.ejs') %>
    </div>
	
  </body>
</html>